<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/line" />
			<corners android:topLeftRadius="10dp"
	    		android:topRightRadius="10dp"
	    		android:bottomLeftRadius="10dp"
	    		android:bottomRightRadius="10dp"/>
            <gradient android:angle="270.0" android:endColor="#ff41a3e3" android:startColor="#ff41a3e3" />
        </shape></item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="#ff41a3e3" android:startColor="#ff41a3e3" />
			<corners android:topLeftRadius="10dp"
	    		android:topRightRadius="10dp"
	    		android:bottomLeftRadius="10dp"
	    		android:bottomRightRadius="10dp"/>
            <stroke android:width="1.0px" android:color="@color/line" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="#ff48b4fc" android:startColor="#ff48b4fc" />
			<corners android:topLeftRadius="10dp"
	    		android:topRightRadius="10dp"
	    		android:bottomLeftRadius="10dp"
	   			android:bottomRightRadius="10dp"/>
            <stroke android:width="1.0px" android:color="@color/line" />
        </shape></item>
    
</selector>
