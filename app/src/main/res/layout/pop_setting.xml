<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/cod_tab_bg"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/chutou_txt"
            android:text="选择服务器"/>
        <RadioGroup
            android:id="@+id/serve_rp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@color/snow"
            android:gravity="center"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/formal_rb"
                android:button="@null"
                android:background="@drawable/bg_radio"
                android:drawableLeft="@drawable/formal_serve"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="正式服务器"
                android:textColor="@color/black" />
            <RadioButton
                android:id="@+id/test_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:background="@drawable/bg_radio"
                android:drawableLeft="@drawable/test_serv"
                android:text="测试服务器"
                android:textColor="@color/black" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>